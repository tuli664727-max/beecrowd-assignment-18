int notes[] = {10000, 5000, 2000, 1000, 500,200};   
int coins[] = {100, 50, 25, 10, 5, 1};   

cout << "NOTAS:\n"; 
for (int n : notes) {   
cout << value / n << " nota(s) de R$ " << n / 100 << ".00\n";       value %= n;     }      cout << "MOEDAS:\n";     for (int c : coins) {         cout << value / c << " moeda(s)de R$ "              << (c >= 100 ? to_string(c/100)+".00" :"0."+(c<10?"0":"")+to_string(c)) << "\n"; value %= c;  

  }

}
