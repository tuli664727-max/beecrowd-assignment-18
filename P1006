#include <iostream>
#include <iomanip> // for fixed and setprecision
using namespace std;

int main() {
    double A, B, C, MEDIA;

    cin >> A >> B >> C; // read three grades

    MEDIA = (A * 2 + B * 3 + C * 5) / 10.0; // calculate weighted average

    cout << fixed << setprecision(1); // 1 decimal place as required
    cout << "MEDIA = " << MEDIA << endl; // print result

    return 0;
}
