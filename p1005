#include <iostream>
#include <iomanip> // for fixed and setprecision
using namespace std;

int main() {
    double A, B, MEDIA;

    cin >> A >> B; // read two grades

    MEDIA = (A * 3.5 + B * 7.5) / 11.0; // calculate weighted average

    cout << fixed << setprecision(5); // 5 decimal places
    cout << "MEDIA = " << MEDIA << endl; // print result in required format

    return 0;
}

