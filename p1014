#include <iostream> 
#include <iomanip>
using namespace std;  
int main() {    
int distance;    
double fuel;      
// Read input    
cin >> distance >> fuel;   
// Calculate average consumption   
double avg = distance / fuel;   
// Print output with 3 decimal places 
cout << fixed << setprecision(3) << avg << " km/l" << endl; 

return 0;
}
