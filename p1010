#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    int q1, q2, c1, c2;
    double p1, p2;
    cin >> c1 >> q1 >> p1 >> c2 >> q2 >> p2;
    cout << fixed << setprecision(2);
    cout << "VALOR A PAGAR: R$ " << q1 * p1 + q2 * p2 << endl;
}
