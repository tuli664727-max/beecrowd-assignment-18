#include <iostream>
#include <iomanip> // For setprecision

using namespace std;

int main() {
    int employee_number, hours_worked;
    double hourly_rate, salary;

    // Read input
    cin >> employee_number >> hours_worked >> hourly_rate;

    // Calculate salary
    salary = hours_worked * hourly_rate;

    // Print output in the required format
    cout << "NUMBER = " << employee_number << endl;
    cout << fixed << setprecision(2); // Ensure 2 decimal places
    cout << "SALARY = U$ " << salary << endl;

    return 0;
}
