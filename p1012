#include <iostream> 
#include <iomanip>
using namespace std; 
int main() {    
double A, B, C;   
cin >> A >> B >> C;   
const double pi = 3.14159;   
cout << fixed << setprecision(3);
cout << "TRIANGULO: " << (A * C) / 2 << endl;
cout << "CIRCULO: " << pi * C * C << endl; 
cout << "TRAPEZIO: " << (A + B) * C / 2 << endl;   
cout << "QUADRADO: " << B * B << endl;   
cout << "RETANGULO: " << A * B << endl;
return 0;
}
