#include <iostream>
#include <iomanip> // For setprecision
using namespace std;

int main() {
    string seller_name;
    double fixed_salary, total_sales, final_salary;

    // Read input
    cin >> seller_name >> fixed_salary >> total_sales;

    // Calculate final salary (fixed + 15% of sales)
    final_salary = fixed_salary + 0.15 * total_sales;

    // Print output in required format with 2 decimal places
    cout << fixed << setprecision(2);
    cout << "TOTAL = R$ " << final_salary << endl;

    return 0;
}
